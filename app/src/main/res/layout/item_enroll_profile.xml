<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/item_enroll_profile_tv_label"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Label"
            android:textColor="#6A89DF"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/item_enroll_profile_tv_mandatory"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="*"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:visibility="gone"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/item_enroll_profile_et_value"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:hint="Input"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:theme="@style/EditText"
        />

    <TextView
        android:id="@+id/item_enroll_profile_tv_value"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:gravity="center_vertical"
        android:hint="Select"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:theme="@style/EditText"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#626262"
        android:textColorHint="#626262"
        />
</LinearLayout>