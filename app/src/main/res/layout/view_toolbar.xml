<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimaryDark"
    android:contentInsetStart="0dp"
    app:contentInsetStart="0dp"
    app:elevation="5dp"
    app:layout_scrollFlags="scroll|enterAlways"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    tools:ignore="MissingPrefix"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/view_toolbar_icon"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            style="@style/Toolbar.ItemWrapper"
            >

            <ImageView
                android:src="@drawable/ic_menu_white"
                style="@style/Toolbar.ItemIcon"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_toolbar_close"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            style="@style/Toolbar.ItemWrapper"
            >

            <ImageView
                android:src="@drawable/ic_arrow_back_white"
                style="@style/Toolbar.ItemIcon"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/view_toolbar_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Tracker"
            android:textColor="@android:color/white"
            android:textSize="17.3sp"
            app:fontPath="fonts/Montserrat-Bold.ttf"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            >

            <RelativeLayout
                android:id="@+id/view_toolbar_backup"
                android:visibility="gone"
                style="@style/Toolbar.ItemWrapper"
                >

                <ImageView
                    android:src="@drawable/ic_backup_white"
                    style="@style/Toolbar.ItemIcon"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>