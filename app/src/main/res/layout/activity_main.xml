<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="MissingPrefix"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_main_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/activity_main_ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_main_app_bar_layout"
        android:background="@color/dark_grey"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:ignore="MissingPrefix"
        >
        <!--content here-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bg_dialog"
                android:orientation="vertical"
                android:paddingBottom="25dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                >

                <TextView
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organization"
                    android:textColor="#6A89DF"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/activity_main_tv_organization"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_item_background"
                    android:enabled="false"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp"
                    android:theme="@style/EditText"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#626262"
                    android:textColorHint="#626262"
                    />

                <TextView
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Program"
                    android:textColor="#6A89DF"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/activity_main_tv_program"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_item_background"
                    android:enabled="false"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp"
                    android:theme="@style/EditText"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#626262"
                    android:textColorHint="#626262"
                    />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-45dp"
                android:gravity="center"
                >

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    >

                    <ImageButton
                        android:id="@+id/activity_main_bt_enroll"
                        fontPath="fonts/Montserrat-Medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_bt_login"
                        android:textColor="@color/white_smoke"
                        android:textSize="18sp"
                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/bt_enroll"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    >

                    <ImageButton
                        android:id="@+id/activity_main_bt_search"
                        fontPath="fonts/Montserrat-Medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_bt_login"
                        android:textColor="@color/white_smoke"
                        android:textSize="18sp"
                        />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bt_search"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    >

                <ImageButton
                    android:id="@+id/activity_main_bt_search_local"
                    fontPath="fonts/Montserrat-Medium.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_bt_login"
                    android:textColor="@color/white_smoke"
                    android:textSize="18sp"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bt_enroll"
                    />
            </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog"
                android:orientation="vertical"
                android:paddingBottom="25dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:layout_gravity="center_vertical"
                >

                <com.daimajia.swipe.SwipeLayout
                    android:id="@+id/list_header_swipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <!-- Bottom View Start-->
                    <LinearLayout
                        android:id="@+id/bottom_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >
                        <!--What you want to show-->
                        <TextView
                            android:id="@+id/tv_previous"
                            fontPath="fonts/Montserrat-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Previous"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:background="#012CA5"
                            />
                        <TextView
                            android:id="@+id/tv_page_count"
                            fontPath="fonts/Montserrat-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Next"
                            android:textColor="#fff"
                            android:textSize="16sp"

                            android:background="#06AE39"

                            />
                        <TextView
                            android:id="@+id/tv_next"
                            fontPath="fonts/Montserrat-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Next"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:background="#012CA5"

                            />

                    </LinearLayout>





                    <!-- Bottom View End-->
                    <!-- Surface View Start -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/item_program_info_tv_header_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:text="First name"
                                android:textColor="?android:textColorPrimary"
                                />

                            <TextView
                                android:id="@+id/item_program_info_tv_header_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:text="Last name"
                                android:textColor="?android:textColorPrimary"
                                />

                            <TextView
                                android:id="@+id/item_program_info_tv_header_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:text="Enroll date"
                                android:textColor="?android:textColorPrimary"
                                />


                    </LinearLayout>


            <!-- Surface View End -->
                </com.daimajia.swipe.SwipeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dark_grey"
                    />

                <ListView
                    android:id="@+id/activity_main_lv_program"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>




